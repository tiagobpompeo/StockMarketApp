<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockMarketApp.MainPage">
    <StackLayout Padding="20">
        <Entry x:Name="StockSymbolEntry" Placeholder="Enter Stock Symbol" />
        <Button Text="Get Stock Data" Clicked="OnGetStockDataClicked" />
        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" />
        <Frame Margin="0,20,0,0" HeightRequest="150" HorizontalOptions="Start" WidthRequest="150">
            <VerticalStackLayout>
                <Label Text="Stock Name:" />
                <Label x:Name="StockNameLabel" TextColor="Black" />
                <Label Text="Stock Price:" />
                <Label x:Name="StockPriceLabel" TextColor="Black" />
            </VerticalStackLayout>          
        </Frame>       
    </StackLayout>
</ContentPage>

