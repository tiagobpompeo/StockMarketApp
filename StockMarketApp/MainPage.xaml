<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockMarketApp.MainPage">
    <StackLayout Padding="20">
        <Entry x:Name="StockSymbolEntry" Placeholder="Enter Stock Symbol" />
        <Button Text="Get Stock Data" Clicked="OnGetStockDataClicked" />
        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" />
        <Label Text="Stock Name:" />
        <Label x:Name="StockNameLabel" />
        <Label Text="Stock Price:" />
        <Label x:Name="StockPriceLabel" />
    </StackLayout>
</ContentPage>

