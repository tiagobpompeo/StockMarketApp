<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockMarketApp.MainPage">
    <StackLayout Padding="20">
        <Entry BackgroundColor="WhiteSmoke" x:Name="StockSymbolEntry" PlaceholderColor="Gray" TextColor="Black" Placeholder="Enter Stock Symbol Demo like IBM" />
        <Button Margin="0,10,0,0" Text="Get Stock Data" Clicked="OnGetStockDataClicked" />
        <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" />

        <Grid ColumnSpacing="10">
             <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

                 <Frame Grid.Row="0" CornerRadius="8" BackgroundColor="#A8A8A8" Grid.Column="0" Margin="0,20,0,0" HeightRequest="100" >
                    <VerticalStackLayout HorizontalOptions="CenterAndExpand" Spacing="5">                      
                        <Label x:Name="StockNameLabel" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="Black" />                    
                        <Label x:Name="StockPriceLabel"  HorizontalTextAlignment="Center" TextColor="Black" />
                    </VerticalStackLayout>          
                </Frame>       
                <Frame Grid.Row="0" CornerRadius="8"  BackgroundColor="#B4A596" Grid.Column="1" Margin="0,20,0,0" HeightRequest="100" >
                    <VerticalStackLayout HorizontalOptions="CenterAndExpand" Spacing="5">
                        <Label x:Name="StockNameLabel2" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="Black" />                    
                        <Label x:Name="StockPriceLabel2"  HorizontalTextAlignment="Center" TextColor="Black" />
                    </VerticalStackLayout>          
                </Frame>

             <Frame Grid.Row="1" CornerRadius="8" BackgroundColor="#669999" Grid.Column="0" Margin="0,20,0,0" HeightRequest="100" >
                    <VerticalStackLayout HorizontalOptions="CenterAndExpand" Spacing="5">                      
                        <Label x:Name="StockNameLabel3" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="Black" />                    
                        <Label x:Name="StockPriceLabel3"  HorizontalTextAlignment="Center" TextColor="Black" />
                    </VerticalStackLayout>          
                </Frame>       
                <Frame Grid.Row="1" CornerRadius="8"  BackgroundColor="#C3A6B1" Grid.Column="1" Margin="0,20,0,0" HeightRequest="100" >
                    <VerticalStackLayout HorizontalOptions="CenterAndExpand" Spacing="5">
                        <Label x:Name="StockNameLabel4" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="Black" />                    
                        <Label x:Name="StockPriceLabel4"  HorizontalTextAlignment="Center" TextColor="Black" />
                    </VerticalStackLayout>          
                </Frame>  
        </Grid>

    </StackLayout>
</ContentPage>

